
updateRate = 5
	
continue = true
	
function NextSlot()
	if turtle.getSelectedSlot() < 16 then 
		return turtle.getSelectedSlot() + 1
	else
		return 1
	end
end
	
while continue do
	print("Looking for a suitable item")
	while turtle.getItemCount() <= 0 do
		turtle.suckUp() -- remove anything that might be above
		turtle.select(NextSlot())
	end
	if  turtle.dropUp()  then-- hurrah, we've found an item. Try and stick it in the inventory above.
		print("Placed" .. turtle.getItemDetail() .. " in slot " .. turtle.getSelectedSlot() .. " in " .. turtle.inspectUp() .. " above")
		print("Waiting " .. updateRate .. " seconds")
		sleep(updateRate)
	else
		print("Unable to place " .. turtle.getItemDetail() .. " in slot " .. turtle.getSelectedSlot() .. " in " .. turtle.inspectUp() .. " above")
		turtle.select(NextSlot())
		sleep(0.5)
	end	
end
	
